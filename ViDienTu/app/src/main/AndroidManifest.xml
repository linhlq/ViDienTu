<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linhlee.vidientu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity"></activity>

        <activity android:name=".activities.PersonalActivity"></activity>

        <activity android:name=".activities.NewsActivity"></activity>

        <activity android:name=".activities.LoginActivity"></activity>

        <activity android:name=".activities.RegisterActivity"></activity>

        <activity android:name=".activities.ForgotPassActivity"></activity>

        <activity android:name=".activities.DetailActivity"></activity>

        <activity android:name=".activities.DepositActivity"></activity>

        <activity android:name=".activities.WithdrawActivity"></activity>
    </application>

</manifest>